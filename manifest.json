{
  "manifest_version": 3,
  "name": "PGP QR Code Generator",
  "version": "1.0",
  "description": "Detects PGP keys/messages and generates a QR code",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["qrcode.js", "content-script.js"]
    }
  ],
  "icons": {
    "48": "icon.ico"
  }
}
